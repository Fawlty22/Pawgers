<section class="create-post">
    <div>
        <h2 class="create-new-post">Create New Post</h2>
        <form class="new-post-form">
            <div>
                <label class="post_title" for="post_title">Title</label>
                <input type="text" id="post_title" name="post_title" />
            </div>
            <div>
                <label class="post_text_content" for="post_text_content">Say Something About Your Dog</label>
                <input type="text" id="post_text_content" name="post_text_content" />
            </div>
            <button type="submit" class="btn">Create</button>
            <button id="upload_widget" class="btn">Attach Image</button>
        </form>
    </div>
    <div class="preview-images"></div>
</section>

{{#if posts.length}}
<section>
    <h2 class="d-flex justify-content-center border-bottom border-primary mb-4 mt-4">Your Posts</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li class = "border-bottom mb-4 rounded">
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link d-flex justify-content-center">Edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src="/javascript/add-post.js"></script>